<section>
  <h2>{{ section.headline }}</h2>

  {% if section.description %}
    {{ section.description }}
  {% endif %}

  {% for element in section.elements %}
    <h3>{{ element.name }}</h3>
    <p>{{ element.description }}</p>
    {% if element.example %}
      <h4>Example(s)</h4>
      <div>
        <h5>Code</h5>
        <pre>{{ element.example }}</pre>
      </div>
      <h5>Output</h5>
      <div>{{ element.example|safe }}</div>
    {% endif %}
    {% if not loop.last %}<hr />{% endif %}
  {% endfor %}
</section>
